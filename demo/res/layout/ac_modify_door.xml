<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical"
    tools:context="com.HkstreamNatNew.AcAddP2PDevice" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_backgroud"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/title_name"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/device_option"
            android:textColor="@color/font_white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp" >

            <EditText
                android:id="@+id/et_door_pwd"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_bg_selecter"
                android:inputType="text"
                android:paddingLeft="115dp"
                android:textColor="@color/front_input" />

            <TextView
                android:id="@+id/et1"
                style="@style/input_show_name"
                android:text="@string/door_pwd"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/ibtn_hide1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_btn_show"
                android:button="@null"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et1"
                android:src="@drawable/iuput_divider" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp" >

            <EditText
                android:id="@+id/et_lock_pwd"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_bg_selecter"
                android:digits="1234567890"
                android:inputType="number"
                android:paddingLeft="115dp"
                android:singleLine="true"
                android:textColor="@color/front_input" />

            <TextView
                android:id="@+id/et2"
                style="@style/input_show_name"
                android:text="@string/lock_pwd"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et2"
                android:src="@drawable/iuput_divider" />

            <CheckBox
                android:id="@+id/ibtn_hide"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_btn_show"
                android:button="@null"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg_selecter" >

            <ToggleButton
                android:id="@+id/sp_pir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ck_toggle"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/et5"
                style="@style/input_show_name"
                android:text="PIR" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et5"
                android:src="@drawable/iuput_divider" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pir_time"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg_selecter"
            android:visibility="gone" >

            <Spinner
                android:id="@+id/sp_pir_time"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:entries="@array/pir_time"
                android:gravity="right|center_vertical"
                android:paddingLeft="115dp"
                android:paddingRight="25dp"
                android:spinnerMode="dialog"
                android:textColor="@color/front_input" />

            <TextView
                android:id="@+id/et8"
                style="@style/input_show_name"
                android:text="@string/pir_time" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et8"
                android:src="@drawable/iuput_divider" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_power_mode"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg_selecter" >

            <Spinner
                android:id="@+id/sp_power_mode"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:entries="@array/array_power_mode"
                android:gravity="right|center_vertical"
                android:paddingLeft="115dp"
                android:paddingRight="25dp"
                android:spinnerMode="dialog"
                android:textColor="@color/front_input" />

            <TextView
                android:id="@+id/et11"
                style="@style/input_show_name"
                android:text="@string/power_mode" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et11"
                android:src="@drawable/iuput_divider" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:visibility="gone" >

            <Spinner
                android:id="@+id/sp_alarm"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_bg_selecter"
                android:entries="@array/open_array"
                android:gravity="right|center_vertical"
                android:paddingLeft="115dp"
                android:paddingRight="25dp"
                android:spinnerMode="dialog"
                android:text="开启"
                android:textColor="@color/front_input" />

            <TextView
                android:id="@+id/et6"
                style="@style/input_show_name"
                android:text="防爆报警" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et6"
                android:src="@drawable/iuput_divider" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg_selecter"
            android:visibility="visible" >

            <Spinner
                android:id="@+id/sp_audio"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:entries="@array/open_array"
                android:gravity="right|center_vertical"
                android:paddingLeft="115dp"
                android:paddingRight="25dp"
                android:spinnerMode="dialog"
                android:textColor="@color/front_input" />

            <TextView
                android:id="@+id/et7"
                style="@style/input_show_name"
                android:text="@string/audio"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et7"
                android:src="@drawable/iuput_divider" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_add_device"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/front_input"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>